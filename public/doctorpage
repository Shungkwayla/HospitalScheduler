    <script>
        // Function to format doctor name with "Dr." prefix
        function formatDoctorName(name) {
            // Remove any existing "Dr." or "Dr" prefix (case insensitive)
            const cleanName = name.replace(/^(dr\.?\s*)/i, '').trim();
            
            // Add "Dr." prefix
            return `Dr. ${cleanName}`;
        }

        // Handle form submission
        document.getElementById('scheduleForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const doctorName = formData.get('doctorName');
            const profession = formData.get('profession');
            const selectedDays = formData.getAll('days');
            
            // Check if at least one day is selected
            if (selectedDays.length === 0) {
                alert('Please select at least one day for the schedule.');
                return;
            }
            
            // Hide empty state when first doctor is added
            const emptyState = document.getElementById('emptyState');
            if (emptyState) {
                emptyState.style.display = 'none';
            }
            
            // Format doctor name with "Dr." prefix
            const formattedDoctorName = formatDoctorName(doctorName);
            
            const timeIn = formData.get('timeIn');
            const timeOut = formData.get('timeOut');

            // Validate that time out is after time in
            if (timeIn >= timeOut) {
                alert('Time Out must be after Time In.');
                return;
            }

            // Format times for display
            const timeInObj = new Date(`2000-01-01T${timeIn}`);
            const timeOutObj = new Date(`2000-01-01T${timeOut}`);

            const formattedTimeIn = timeInObj.toLocaleTimeString('en-US', { 
                hour: 'numeric', 
                minute: '2-digit',
                hour12: true 
            });

            const formattedTimeOut = timeOutObj.toLocaleTimeString('en-US', { 
                hour: 'numeric', 
                minute: '2-digit',
                hour12: true 
            });

            const timeRange = `${formattedTimeIn} - ${formattedTimeOut}`;
            
            // Create day spans
            const daySpans = selectedDays.map(day => 
                `<span class="schedule-day">${day}</span>`
            ).join('');
            
            // Create new doctor card
            const doctorCard = document.createElement('div');
            doctorCard.className = 'doctor-card';
            doctorCard.innerHTML = `
                <div class="doctor-name">${formattedDoctorName}</div>
                <div class="doctor-profession">${profession}</div>
                <div class="doctor-schedule">
                    ${daySpans}
                    <span class="schedule-time">${timeRange}</span>
                </div>
            `;
            
            // Add to doctors list
            document.getElementById('doctorsList').appendChild(doctorCard);
            
            // Reset form
            this.reset();
            
            // Show success message
            alert(`Doctor schedule added successfully for ${selectedDays.join(', ')}!`);
        });
    </script>
